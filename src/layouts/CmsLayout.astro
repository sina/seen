---
import BaseLayout from './BaseLayout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

const { description, page_title, title, classNames = '' } = Astro.props;
---

<BaseLayout title={title} description={description} page_title={page_title}>
  <Header title={title} />
  <main class=`m-auto py-12 px-4 we-[960px] max-w-[calc(100%-2em)] min-h-[85vh] ${classNames}`>
    <slot />
  </main>
  <Footer />
</BaseLayout>